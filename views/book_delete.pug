extends layout

block content
    h1 #{title}: #{book.title}

    if bookinstances.length
        p #[strong Delete the following instances before attempting to delete this book.]

        dl
        each instance in bookinstances 
            dt
                a(href=instance.url) #{book.title}: #{instance.id}


    else 
        p Do you really want to delete this book?

        form(method='POST' action='')
            div.form-group
                input#id.form-control(type='hidden',name='id', required='true', value=book.id)
                button.btn.btn-primary(type='submit') Delete

